<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.samojlov_av_homework_module_16_number_8_1_koala.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_entryFragment"
            app:destination="@id/entryFragment"
            app:enterAnim="@anim/manifestation"
            app:exitAnim="@anim/manifestation_out"
            app:popEnterAnim="@anim/manifestation"
            app:popExitAnim="@anim/manifestation_out" />
    </fragment>
    <fragment
        android:id="@+id/entryFragment"
        android:name="com.example.samojlov_av_homework_module_16_number_8_1_koala.fragments.EntryFragment"
        android:label="fragment_entry"
        tools:layout="@layout/fragment_entry" >
        <action
            android:id="@+id/action_entryFragment_to_contactsFragment"
            app:destination="@id/contactsFragment"
            app:enterAnim="@anim/manifestation"
            app:exitAnim="@anim/manifestation_out"
            app:popEnterAnim="@anim/manifestation"
            app:popExitAnim="@anim/manifestation_out" />
        <action
            android:id="@+id/action_entryFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/manifestation"
            app:exitAnim="@anim/manifestation_out"
            app:popEnterAnim="@anim/manifestation"
            app:popExitAnim="@anim/manifestation_out" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.samojlov_av_homework_module_16_number_8_1_koala.fragments.ContactsFragment"
        android:label="fragment_contacts"
        tools:layout="@layout/fragment_contacts" />
</navigation>